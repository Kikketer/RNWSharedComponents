{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "es7", "esnext", "dom", "dom.iterable"],
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist/mobile",
    "rootDir": "components",
    "composite": true,
    "declaration": true
  },
  "include": ["components/"]
}
